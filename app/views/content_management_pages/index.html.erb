<!--BackEnd page-->
<div class="content-box-large col-md-12 col-sm-7 col-xs-12">
  <div class="panel-heading">
    <div class="panel-title col-md-12">
      <i class="fa fa-file-text-o"></i>
      Listing CMS Pages
      <% if params[:search] %>
        Search Result About <%=params[:search]%>
      <% end %>
      ( <%=@count%> )

      <div class="pull-right search-wrapper col-md-6">
        <% @Search_placeholder="Search in page title , page content" %>
        <%= render 'home/admin_search' %>
      </div>
      <br>
      <div class="sub-links col-md-12">
        <i class="fa fa-pencil-square-o"></i>
        <%= link_to 'New CMS Page', new_content_management_page_path %>
        <i class="fa fa-file-excel-o"></i>
        <%= link_to "Export To Excel", content_management_pages_path(format: "xls") %>          
      </div>
    </div><!--panel-title-->
    <br>
  </div><!--panel-heading-->
  <div class="panel-body">

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered sortable" id="example">
      <thead title="Click to short" class="cursor">
        <tr>
          <td>Page</td>
          <th>Slug</th>
          <th></th>
          <!--<th></th>-->
        </tr>
      </thead>

      <tbody>
        <% if @content_management_pages.blank? %>
          <tr>
            <td colspan="100%" align="center" class="empty"><%= t('empty_table') %></td>
          </tr>
        <% else %>
          <% @content_management_pages.each do |content_management_page| %>
            <tr class="show-image">
              <td><%= content_management_page.page_title %></td>
              <td><%= content_management_page.page %></td>
              <td class="icon-control">
                <%= link_to edit_content_management_page_path(content_management_page), :title => "Edit" do %><div class="backend-icon icon-edit"></div><% end %>
              </td>
              <% if content_management_page.appeal_page %>
                <td class="icon-control">
                  <%= link_to content_management_page, method: :delete, data: { confirm: 'Are you sure?' } ,:title => "Delete" do %><div class="backend-icon icon-delete"></div><% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
            <tfoot>
              <tr>
                <th colspan="100%"><%= paginate @content_management_pages %></th>
              </tr>
            </tfoot>
          <% end %>
      </tbody>
    </table>
  </div><!--panel-body-->
</div><!--content-box-large-->
