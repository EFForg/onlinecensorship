<%
  meta title: t(:who_we_are)
%>

<% cms_page_content('who-we-are') %>

<section class="dark-blue-bg page-title-wrapper">
  <% unless @page.nil? %>
    <div class="container">
      <h1> <%= @page.page_title %> </h1>
      <% if @page.brief.present? %>
  	    <div class="row">
  	    	<div class="col-md-8">
  			    <p>
  			    	<%= @page.brief %>
  			    </p>
  		    </div>
  	    </div>
      <% end %>
    </div>
  <% end %>
</section>

<div class="container about-page">
  <div class="row">
    <div class="col-md-12">
      <div class="text-box clearfix">
      	<div class="row">
				  <%=@page.content.html_safe%>
        </div>
      </div>
    </div>
  </div>
  <div class="tabs-wrapper">
		<ul class="nav nav-pills">
		  <li class="active"><a data-toggle="tab" href="#team"><%= t(:our_team) %></a></li>
		  <li><a data-toggle="tab" href="#advisors"><%= t(:our_advisors) %></a></li>
		</ul>
		<div class="tab-content">
		  <div id="team" class="tab-pane fade in active">
		  	<div class="row">
			  	<% @team.each do |person| %>
			  		<div class="col col-md-6">
			  			<div class="team-member clearfix">
			  				<div class="personal-photo">
			  					<%= image_tag person.photo.url(:thumb) %>
			  				</div>
			  				<div class="personal-info">
			  					<h2> <%=person.name%> </h2>
			  					<span class="h4"> <%=person.role%> </span>
			  					<p> <%=person.bio.html_safe%> </p>
			  				</div>
			  			</div>
			  		</div>
			  	<% end %>
		  	</div>
		  </div>
		  <div id="advisors" class="tab-pane fade">
		  	<div class="row">
			  	<% @advisors.each do |person| %>
			  		<div class="col col-md-4">
			  			<div class="team-member advisor clearfix">
			  				<div class="personal-info">
			  					<h2> <%=person.name%> </h2>
			  					<p> <%=person.bio.html_safe%> </p>
			  				</div>
			  			</div>
			  		</div>
			  	<% end %>
		  	</div>
		  </div>
		</div>
  </div>
</div>
