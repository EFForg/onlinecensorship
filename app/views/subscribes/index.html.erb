<!--BackEnd page-->
<div class="content-box-large col-md-12 col-sm-7 col-xs-12">
  <div class="panel-heading">
    <div class="panel-title col-md-12">
      <i class="fa fa-envelope"></i>
      Listing Subscribers
      <% if params[:search] %>
        Search Result About <%=params[:search]%>
      <% end %>
      ( <%=@count%> )

      <div class="pull-right search-wrapper col-md-6">
        <% @Search_placeholder="Search in email " %>
        <%= render 'home/admin_search' %>
      </div>
    </div><!--panel-title-->
    <br>
    <div class="sub-links col-md-12">
      <i class="fa fa-file-excel-o"></i>
      <%= link_to "Export To Excel", subscribes_path(format: "xls") %>
    </div>
    <br>
  </div><!--panel-heading-->
  <div class="panel-body">

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered sortable" id="example">
      <thead title="Click to short" class="cursor">
        <tr>
          <th>Email</th>           
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% if @subscribes.blank? %>
          <tr>
            <td colspan="100%" align="center" class="empty"><%= t('empty_table') %></td>
          </tr>
        <% else %>
          <% @subscribes.each do |subscribe| %>
            <tr class="show-image">
              <td><%= subscribe.email %></td>
              <td class="icon-control">
                <%= link_to subscribe, method: :delete, data: { confirm: 'Are you sure?' } ,:title => "Delete" do %><div class="backend-icon icon-delete"></div><% end %>
              </td>
            </tr>
          <% end %>
            <tfoot>
              <tr>
                <th colspan="100%"><%= paginate @subscribes %></th>
              </tr>
            </tfoot>
          <% end %>
      </tbody>
    </table>
  </div><!--panel-body-->
</div><!--content-box-large-->