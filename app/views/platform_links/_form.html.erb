<%= form_for(@platform_link) do |f| %>
  <% if @platform_link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@platform_link.errors.count, "error") %> prohibited this platform link from being saved:</h2>
      <ul>
      <% @platform_link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :platform_name %><br>
    <%= f.collection_select :platform_name, @platforms, :option_title, :option_title %>
  </div>

  <div class="field">
    <%= f.label :support_link %><br>
    <%= f.text_field :support_link, required: true , :class=> "form-control"  %>
    <div class="tip"> Full link with http:// </div>
  </div>
  
  <div class="actions">
    <%= f.submit :class=> "btn btn-primary" %>
  </div>
<% end %>
