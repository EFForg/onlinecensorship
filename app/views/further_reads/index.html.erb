<%
  meta title: t(:further_readings)
%>

<section class="dark-blue-bg page-title-wrapper">
  <div class="container">
    <h1> <%= t(:further_readings) %> </h1>
  </div>
</section>

<div class="container readings-page">

	<% if @staff.present? %>

		<div class="dark-blue-bg box">
			<div class="row">
				
				<div class="col-md-3">
					<h2> <%= t(:featured_reads) %> </h2>
				</div>

				<div class="col-md-8">

					<% @staff.each do |read| %>

						<div class="read">
							<p> <%=read.author%> (<%=read.year%>) </p>
							<p>
								<b>
	              	<%=link_to read.link, :target=>"_blank" do %>
										<%=read.title%>
									<% end %>
								</b>
							</p>
							<p> <%=read.written_in%> </p>
						</div>
					
					<% end %>
					
				</div>

			</div>
		</div>

	<% end %>

	<div class="white-box box">
		<div class="row">
			
			<div class="col-md-3">
				<h2> <%= t(:books_and_journal_articles) %> </h2>
			</div>

			<div class="col-md-9">

				<div>
					
					<% @books.each do |read| %>

					<div class="read">
						<p> <%=read.author%> (<%=read.year%>) </p>
						<p> 
							<b>
              	<%=link_to read.link, :target=>"_blank" do %>
									<%=read.title%>
								<% end %>
							</b>
						</p>
						<p> <%=read.written_in%> </p>
					</div>
					
					<% end %>

				</div>

			</div>
			
		</div>
	</div>

	<div class="white-box box">
		<div class="row">
			
			<div class="col-md-3">
				<h2> <%= t(:blog_posts_and_news_articles) %> </h2>
			</div>

			<div class="col-md-9">

				<div>
					
					<% @blog.each do |read| %>

						<div class="read">
							<p> <%=read.author%> (<%=read.year%>) </p>
							<p> 
								<b>
	              	<%=link_to read.link, :target=>"_blank" do %>
										<%=read.title%>
									<% end %>
								</b> 
							</p>
							<p> <%=read.written_in%> </p>
						</div>

					<% end %>

				</div>
			</div>
			
		</div>
	</div>

</div>