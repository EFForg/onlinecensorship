<%
meta og: {
  image: "#{root_url}oc.jpg",
  title: "onlinecensorship.org",
  description: t(:website_description)
}
%>

<%= render 'header' %>

<section class="appeal">
  <div class="container">
    <div class="row flex">
      <div class="col-sm-8">
        <h1> <%=@home_fields.appeal_text%> </h1>
      </div>
      <div class="col-sm-4">
        <%= link_to @home_fields.appeal_btn_text, resources_how_to_appeal_path, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</section>

<%= render 'carousel' %>

<section class="about-oc">
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1> <%=@home_fields.what_oc_title%> </h1>
      <%= image_tag("magnify-sm", size: "200x200", class: 'hidden-sm hidden-xs center-block') %>
    </div>
    <div class="col-md-6 col-md-offset-2">
      <p> <%=@home_fields.what_oc_text%> </p>
      <p>
        <%= link_to @home_fields.submit_btn_text, new_takedown_path, class: 'btn btn-primary' %>
      </p>
    </div>
  </div>
</div>
</section>

<%= render 'news' %>
