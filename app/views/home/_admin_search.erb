<%= form_tag("", method: "get") do %>
  <% if params[:search]%>
    <%=link_to "Show All", params[:controller] ,:class=>'pull-right btn btn-primary btn-xs search-btn'%>
  <% else %>
    <%= submit_tag "" ,:class=>'pull-right btn btn-primary btn-xs search-btn', title: "Search" , value: "Search" %>
  <% end%>
  <%= text_field_tag "search" ,(params[:search]),:class=>'pull-right col-md-9 col-sm-9 col-xs-8',placeholder: @Search_placeholder ,:required => true %>
<% end %>