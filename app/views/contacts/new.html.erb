<%
  meta title: "Contact us"
%>

<section class="dark-blue-bg page-title-wrapper">
  <div class="container">
    <h1> Contact us </h1>
  </div>
</section>

<div class="container contact-page">
  <div class="row">

    <div class="col-md-8">
      <div class="white-box">

        <div class="form-wrapper"> 
        
          <p> Drop us a line if you want to contact us </p>

          <div class="row">
            <%= render 'form' %>
          </div>

        </div>

        <div class="form-confirmation">

          <h2> Thank you. </h2>
          <p> Thanks for contacting us, we'll back to you soon. </p>

        </div>

      </div>
    </div>

  </div>
</div>