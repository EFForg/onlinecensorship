<table width="100%" cellspacing="2">
  <tr>
    <th style="text-align:left; font-weight:bold;">Registered at</th>
    <th style="text-align:left; font-weight:bold;">Name</th>
    <th style="text-align:left; font-weight:bold;">Surname</th>
    <th style="text-align:left; font-weight:bold;">Email</th>
    <th style="text-align:left; font-weight:bold;">Pgp Key</th>
    <th style="text-align:left; font-weight:bold;">Topic</th>
    <th style="text-align:left; font-weight:bold;">Message</th>
  </tr>

  <% @contacts.each do |excel| %>
    <tr>
      <td style="text-align:left;"><%= excel.created_at.to_date %></td>
      <td style="text-align:left;"><%= excel.name %></td>
      <td style="text-align:left;"><%= excel.surname %></td>
      <td style="text-align:left;"><%= excel.email %></td>
      <td style="text-align:left;"><%= excel.pgp_key %></td>
      <td style="text-align:left;">
        <% if excel.contacts_topic.present? %>
          <%=excel.contacts_topic.name %>
        <% end %>
      </td>
      <td style="text-align:left;"><%= excel.message %></td>
    </tr>
  <% end %>

</table>